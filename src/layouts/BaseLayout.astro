---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="es" class="scroll-smooth antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delfos Studio · Agencia Creativa</title>

    <!-- SEO General -->
    <meta
      name="description"
      content="Agencia creativa de diseño web, branding, automatización y SEO. Convertimos ideas en experiencias digitales."
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://delfos-studio.vercel.app/" />

    <!-- Theme para navegador -->
    <meta name="theme-color" content="#0f1113" />

    <!-- Open Graph (WhatsApp, Facebook, LinkedIn) -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Delfos Studio · Agencia Creativa" />
    <meta
      property="og:description"
      content="Diseño web moderno, branding visual, automatización y SEO para marcas que piensan en el futuro."
    />
    <meta property="og:url" content="https://delfos-studio.vercel.app/" />
    <meta
      property="og:image"
      content="https://delfos-studio.vercel.app/assets/social/delfos-og-image.jpg"
    />
    <meta property="og:image:alt" content="Logo y tagline de Delfos Studio" />
    <meta property="og:site_name" content="Delfos Studio" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Delfos Studio · Agencia Creativa" />
    <meta
      name="twitter:description"
      content="Diseño web moderno, branding visual, automatización y SEO para marcas que piensan en el futuro."
    />
    <meta
      name="twitter:image"
      content="https://delfos-studio.vercel.app/assets/social/delfos-og-image.jpg"
    />

    <!-- Favicon -->
    <link
      rel="icon"
      href="/assets/logos/delfos-logo-transparente.png"
      type="image/png"
    />

    <!-- Manifest PWA -->
    <link rel="manifest" href="/manifest.json" />

    <!-- Preload de fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Inter:wght@400;600&family=Playfair+Display:wght@700&display=swap"
      rel="stylesheet"
    />
    <!-- Google Analytics -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-LYX4XL9L20T"></script>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-LYK49LN20T"
    ></script>
    <script is:raw>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-LYK49LN20T");
    </script>
  </head>

  <body
    class="relative bg-[#0f1113] text-[#ededed] font-primary min-h-screen flex flex-col transition-colors duration-300"
  >
    <!-- Overlay dorado -->
    <div
      aria-hidden="true"
      class="pointer-events-none fixed inset-0 z-0"
      style="background: radial-gradient(ellipse 100% 60% at 70% 10%, #C2A87522 0%, transparent 70%)"
    >
    </div>

    <!-- Skip to main -->
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-gold text-[#0f1113] rounded px-4 py-2 z-50 shadow-lg"
    >
      Saltar al contenido principal
    </a>

    <Header />

    <main id="main" class="flex-1 relative z-10">
      <slot />
    </main>

    <Footer />
  </body>
</html>
