---
import IconBrandInstagram from "./icons/IconBrandInstagram.astro";
import IconBrandWhatsapp from "./icons/IconBrandWhatsapp.astro";
---

<footer class="bg-delfos-bg-dark dark:bg-delfos-bg-light py-10 px-4 mt-auto">
  <div class="max-w-4xl mx-auto flex flex-col items-center gap-4 text-center">
    <button
      type="button"
      aria-label="Volver arriba"
      class="mb-3 text-gold/80 hover:text-gold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-gold/60 rounded-full"
      onclick="window.scrollTo({top:0,behavior:'smooth'})"
      style="font-size:1.3rem"
      title="Ir arriba"
    >
      â†‘
    </button>
    <p
      class="text-delfos-bg-light dark:text-delfos-black/80 text-sm select-none"
    >
      Delfos Studio &copy; {new Date().getFullYear()}
    </p>
    <div class="flex gap-6 mt-1">
      <a
        href="https://instagram.com/delfosstudio"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Instagram"
        class="text-gold hover:text-gold-80 focus:outline-none focus:ring-2 focus:ring-gold/60 rounded-full transition-all duration-200"
        title="Instagram"
      >
        <IconBrandInstagram class="w-7 h-7" />
      </a>
      <a
        href="https://wa.me/+5492324592391"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="WhatsApp"
        class="text-gold hover:text-gold-80 focus:outline-none focus:ring-2 focus:ring-gold/60 rounded-full transition-all duration-200"
        title="WhatsApp"
      >
        <IconBrandWhatsapp class="w-7 h-7" />
      </a>
    </div>
  </div>
</footer>
