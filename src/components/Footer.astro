---
import IconBrandInstagram from "./icons/IconBrandInstagram.astro";
import IconBrandWhatsapp from "./icons/IconBrandWhatsapp.astro";
import IconBrandLinkedin from "./icons/IconBrandLinkedin.astro";
---

<footer class="bg-[#0f1113] text-offwhite px-6 py-10">
  <div
    class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 text-sm text-[#aaa] items-center"
  >
    <!-- Columna izquierda: marca + año -->
    <div class="text-center md:text-left space-y-1">
      <p class="text-base font-semibold text-gold">Delfos Studio</p>
      <p class="text-xs text-[#666]">
        &copy; {new Date().getFullYear()} Todos los derechos reservados.
      </p>
    </div>

    <!-- Columna derecha: navegación + redes -->
    <div class="flex flex-col md:items-end items-center gap-3">
      <!-- Navegación secundaria -->
      <nav
        aria-label="Navegación de pie de página"
        class="flex gap-4 text-xs font-medium"
      >
        <a href="#servicios" class="hover:text-gold transition">Servicios</a>
        <a href="#portfolio" class="hover:text-gold transition">Portfolio</a>
        <a href="#contacto" class="hover:text-gold transition">Contacto</a>
      </nav>

      <!-- Redes sociales -->
      <div class="flex gap-4" role="navigation" aria-label="Redes sociales">
        <a
          href="https://instagram.com/delfos.studio"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="hover:text-gold transition"
        >
          <IconBrandInstagram class="w-4 h-4" />
        </a>
        <a
          href="https://wa.me/+5492324674177"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="WhatsApp"
          class="hover:text-gold transition"
        >
          <IconBrandWhatsapp class="w-4 h-4" />
        </a>
        <a
          href="https://www.linkedin.com/in/delfos-studio/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="hover:text-gold transition"
        >
          <IconBrandLinkedin class="w-4 h-4" />
        </a>
      </div>
    </div>
  </div>
</footer>
