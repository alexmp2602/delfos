---
const projects = [
  {
    img: "/assets/projects/gallinas.webp",
    title: "Gallinas Libres",
    desc: "Landing page para criadores avícolas independientes. Optimizada para mobile, performance y conversión.",
    link: "https://gallinaslibres.com/",
  },
  {
    img: "/assets/projects/domus.webp",
    title: "Domus Estética",
    desc: "Página institucional y blog para centro de estética. Identidad visual delicada y sistema de reservas sencillo.",
    link: "https://www.esteticadomus.com/",
  },
  {
    img: "/assets/projects/iabot.webp",
    title: "IABOT",
    desc: "Web para taller de robótica educativa. Presentación de cursos, inscripciones online y recursos para estudiantes.",
    link: "https://iabot.ar/",
  },
  {
    img: "/assets/projects/apri.webp",
    title: "Cerrajería APRI",
    desc: "Sitio institucional para cerrajería. Diseño claro y moderno, con contacto directo para urgencias en Mercedes y alrededores.",
    link: "https://cerrajeriaapri.com.ar/",
  },
];
---

<section
  id="portfolio"
  class="scroll-offset px-6 py-24 text-offwhite relative"
  aria-labelledby="titulo-portfolio"
>
  <div class="max-w-6xl mx-auto">
    <h2
      id="titulo-portfolio"
      class="text-center text-3xl md:text-5xl font-deco text-gold mb-14 uppercase"
    >
      Portafolio
    </h2>

    <div class="grid gap-10 sm:grid-cols-2 xl:grid-cols-3">
      {
        projects.map(({ img, title, desc, link }, i) => (
          <div
            class="animate-fadein"
            style={`animation-delay:${0.07 + i * 0.07}s`}
          >
            {link ? (
              <a
                href={link}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Ver proyecto ${title}`}
                class="group block rounded-xl overflow-hidden bg-[#1a1a1a] transition-transform duration-300 hover:scale-[1.015] hover:shadow-gold-glow focus:outline-none focus-visible:ring-2 focus-visible:ring-gold"
                tabindex={0}
              >
                <div class="relative aspect-[4/3] overflow-hidden">
                  <img
                    src={img}
                    alt={`Preview proyecto: ${title}`}
                    class="w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-80"
                    loading="lazy"
                  />
                </div>
                <div class="p-5">
                  <h3 class="text-xl font-semibold text-gold mb-2">{title}</h3>
                  <p class="text-sm text-[#ddd] leading-relaxed">{desc}</p>
                </div>
              </a>
            ) : (
              <div
                class="block rounded-xl bg-[#1a1a1a] p-5 opacity-60 cursor-not-allowed shadow-inner"
                tabindex={0}
                aria-label={`Preview proyecto: ${title}`}
              >
                <div class="relative aspect-[4/3] overflow-hidden mb-4">
                  <img
                    src={img}
                    alt={`Preview proyecto: ${title}`}
                    class="w-full h-full object-cover grayscale contrast-75"
                    loading="lazy"
                  />
                </div>
                <h3 class="text-xl font-semibold text-gold mb-2">{title}</h3>
                <p class="text-sm text-[#aaa] leading-relaxed">{desc}</p>
              </div>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
