---
import IconWeb from "./icons/IconWeb.astro";
import IconBranding from "./icons/IconBranding.astro";
import IconAutomation from "./icons/IconAutomation.astro";
import IconSEO from "./icons/IconSEO.astro";
import IconContent from "./icons/IconContent.astro";

const services = [
  {
    icon: IconWeb,
    title: "Diseño Web Moderno",
    desc: "Sitios visuales, responsivos y enfocados en experiencia de usuario.",
  },
  {
    icon: IconBranding,
    title: "Branding Visual",
    desc: "Identidad gráfica memorable, desde logotipo hasta paleta cromática.",
  },
  {
    icon: IconAutomation,
    title: "Automatización",
    desc: "Optimizá tareas y flujos para tu negocio con tecnología.",
  },
  {
    icon: IconSEO,
    title: "Posicionamiento SEO",
    desc: "Mejoramos tu presencia y ranking en buscadores.",
  },
  {
    icon: IconContent,
    title: "Gestión de Contenido",
    desc: "Organización y actualización ágil de tus contenidos digitales.",
  },
];
---

<section
  id="servicios"
  class="scroll-offset px-6 py-24 bg-charcoal text-offwhite"
  aria-labelledby="titulo-servicios"
>
  <div class="max-w-6xl mx-auto text-center">
    <h2
      id="titulo-servicios"
      class="text-3xl md:text-5xl font-deco text-gold mb-16"
    >
      Servicios
    </h2>

    <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3">
      {
        services.map(({ icon: Icon, title, desc }) => (
          <article
            class="group p-8 rounded-xl bg-[#1a1a1a] text-left transition-transform duration-300 hover:scale-[1.02] hover:shadow-gold-glow focus:outline-none focus-visible:ring-2 focus-visible:ring-gold"
            tabindex={0}
          >
            <div class="mb-5 text-gold">
              <Icon class="w-10 h-10" />
            </div>
            <h3 class="text-xl font-semibold mb-2 group-hover:text-gold transition-colors">
              {title}
            </h3>
            <p class="text-sm text-[#dcdcdc]">{desc}</p>
          </article>
        ))
      }
    </div>
  </div>
</section>
