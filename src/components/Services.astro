---
import IconWeb from "./icons/IconWeb.astro";
import IconBranding from "./icons/IconBranding.astro";
import IconAutomation from "./icons/IconAutomation.astro";
import IconSEO from "./icons/IconSEO.astro";
import IconContent from "./icons/IconContent.astro";

const services = [
  {
    icon: IconWeb,
    title: "Diseño Web Moderno",
    desc: "Sitios visuales, responsivos y enfocados en experiencia de usuario.",
  },
  {
    icon: IconBranding,
    title: "Branding Visual",
    desc: "Identidad gráfica memorable, desde logotipo hasta paleta cromática.",
  },
  {
    icon: IconAutomation,
    title: "Automatización",
    desc: "Optimizá tareas y flujos para tu negocio con tecnología.",
  },
  {
    icon: IconSEO,
    title: "Posicionamiento SEO",
    desc: "Mejoramos tu presencia y ranking en buscadores.",
  },
  {
    icon: IconContent,
    title: "Gestión de Contenido",
    desc: "Organización y actualización ágil de tus contenidos digitales.",
  },
];
---

<section
  id="servicios"
  class="py-20 md:py-28 bg-delfos-bg-dark dark:bg-delfos-bg-light transition-colors duration-500"
>
  <div class="max-w-6xl mx-auto px-4">
    <h2
      class="text-gold font-serif-title text-3xl md:text-4xl font-bold mb-14 text-center tracking-tight"
    >
      Servicios
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10">
      {
        services.map(({ icon: Icon, title, desc }) => (
          <article
            class="group flex flex-col items-center rounded-3xl p-10
              bg-delfos-black/70 dark:bg-gold/10 shadow-lg
              border border-transparent hover:border-gold
              transition-all duration-300 focus-within:ring-2 focus-within:ring-gold
              hover:shadow-gold-glow motion-safe:animate-fadein
              focus:outline-none"
            tabindex={0}
            aria-label={title}
          >
            <div class="mb-5 transition-transform duration-300 group-hover:scale-110 group-focus:scale-110">
              <Icon class="w-10 h-10 text-gold drop-shadow-gold-glow" />
            </div>
            <h3 class="font-serif-title text-xl text-gold mb-3 text-center">
              {title}
            </h3>
            <p class="text-base text-center font-sans-body text-delfos-bg-light dark:text-delfos-black/80">
              {desc}
            </p>
          </article>
        ))
      }
    </div>
  </div>
</section>
