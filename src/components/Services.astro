---
const services = [
  { title: 'Landing Pro', desc: 'Una p\u00e1gina de alto impacto para destacar tu producto o servicio.', price: '$300' },
  { title: 'Web Corporativa', desc: 'Sitio completo para mostrar tu negocio al mundo.', price: '$600' },
  { title: 'Web Expandida', desc: 'Expande tu presencia online con funcionalidades a medida.', price: '$900' },
];
---
<section id="services">
  <div class="container">
    <h2 style="text-align:center;margin-bottom:2rem;">Servicios</h2>
    <div style="display:grid;gap:1.5rem;grid-template-columns:repeat(auto-fit,minmax(250px,1fr));">
      {services.map(service => (
        <div style="border:1px solid var(--color-gold);padding:1.5rem;border-radius:8px;background:var(--color-dark-alt);">
          <h3 style="margin-top:0;">{service.title}</h3>
          <p>{service.desc}</p>
          <p style="font-weight:600;color:var(--color-gold);">{service.price}</p>
        </div>
      ))}
    </div>
  </div>
</section>
