---
const plans = [
  {
    name: "Landing Pro",
    price: "$150.000",
    desc: "Una sección larga, responsive, llamada a la acción y contacto.",
    features: [
      "Ideal para lanzar tu marca o servicio",
      "Carga rápida y diseño profesional",
      "Listo para publicar en 7 días",
    ],
  },
  {
    name: "Web Corporativa",
    price: "$250.000",
    desc: "3 a 5 secciones, responsive, formulario y SEO básico.",
    features: [
      "Página institucional moderna",
      "Formularios de contacto",
      "Optimización básica para buscadores",
    ],
    highlight: true,
  },
  {
    name: "Tienda o Web Expandida",
    price: "$300.000",
    desc: "10+ secciones, blog, catálogo o ecommerce.",
    features: [
      "Catálogo de productos y/o blog",
      "Integración de pasarela de pagos",
      "Automatizaciones y funcionalidades avanzadas",
    ],
  },
];
---

<section
  id="precios"
  class="scroll-offset px-6 py-24 text-offwhite"
  aria-labelledby="titulo-precios"
>
  <div class="max-w-6xl mx-auto">
    <h2
      id="titulo-precios"
      class="text-center text-3xl md:text-5xl font-deco text-gold mb-14"
    >
      Paquetes y precios
    </h2>

    <div class="grid gap-10 sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-3">
      {
        plans.map(({ name, price, desc, features, highlight }, i) => (
          <div
            class={`relative flex flex-col h-full p-6 rounded-xl bg-gradient-to-br from-[#1a1a1a] to-[#111111] shadow-inner animate-fadein transition-transform hover:scale-[1.015] hover:shadow-gold-glow focus:outline-none focus-visible:ring-2 focus-visible:ring-gold ${
              highlight ? "ring-2 ring-gold" : ""
            }`}
            tabindex={0}
            style={{ animationDelay: `${0.07 + i * 0.07}s` }}
          >
            {highlight && (
              <span class="absolute top-4 right-4 text-xs font-semibold text-black bg-gold px-3 py-1 rounded-full uppercase tracking-wide">
                Más elegido
              </span>
            )}

            <h3 class="text-xl font-semibold text-gold mb-2 text-center">
              {name}
            </h3>
            <div class="text-3xl font-bold text-center mb-3">{price}</div>
            <p class="text-sm text-[#ddd] text-center mb-5 leading-relaxed">
              {desc}
            </p>

            <ul class="flex flex-col gap-3 mb-6">
              {features.map((f) => (
                <li class="flex items-start gap-3 text-sm text-[#ddd]">
                  <svg
                    class="w-4 h-4 mt-[2px] text-gold flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M16.707 5.293a1 1 0 010 1.414L8.414 15l-4.121-4.121a1 1 0 011.414-1.414L8.414 12.586l7.293-7.293a1 1 0 011.414 0z" />
                  </svg>
                  <span>{f}</span>
                </li>
              ))}
            </ul>

            <a
              href="#contacto"
              class="mt-auto inline-block text-center bg-[#192e38] hover:bg-gold hover:text-black text-white font-medium py-2.5 px-4 rounded-md transition-all"
              aria-label={`Solicitar presupuesto para ${name}`}
            >
              Solicitar presupuesto
            </a>
          </div>
        ))
      }
    </div>

    <p class="mt-10 text-sm text-center text-[#888] max-w-xl mx-auto">
      * Precios estimativos. Consultá por combos, mantenimiento o desarrollo a
      medida.
    </p>
  </div>
</section>
