---
const plans = [
  {
    name: "Página Starter",
    desc: "Tu negocio online listo para compartir y comenzar a vender.",
    features: [
      "Página visual y responsive, ideal para redes",
      "Botón directo a WhatsApp para pedidos y consultas",
      "Muestra productos o servicios con claridad",
      "Alineada con la identidad de tu marca",
      "Lista para escalar a futuro",
      "Desde AR$ 80.000",
    ],
  },
  {
    name: "Página Pro",
    desc: "Impulsá tu marca con una página optimizada y persuasiva.",
    features: [
      "Sección larga con llamada a la acción efectiva",
      "Animaciones suaves y diseño profesional",
      "Formulario de contacto para convertir visitantes",
      "SEO básico incluido",
      "Entrega en 10-12 días",
      "Desde AR$ 150.000",
    ],
    highlight: true,
  },
  {
    name: "Página Corporativa",
    desc: "Mostrá tu negocio al mundo con una web institucional profesional.",
    features: [
      "3 a 5 secciones claras y responsivas",
      "Formularios de contacto integrados",
      "Diseño alineado a tu identidad visual",
      "Optimización para buscadores",
      "Entrega en 15-20 días",
      "Desde AR$ 200.000",
    ],
  },
  {
    name: "Tienda Online",
    desc: "Escalá tu negocio con una tienda digital completa.",
    features: [
      "Blog, catálogo y más de 10 secciones",
      "Pasarela de pagos integrada",
      "Automatizaciones avanzadas",
      "Diseñada para escalar y vender",
      "Entrega en 20-30 días",
      "Consultar presupuesto",
    ],
  },
];
---

<section
  id="paquetes"
  class="scroll-offset px-6 py-16 text-offwhite"
  aria-labelledby="titulo-paquetes"
>
  <div class="max-w-6xl mx-auto">
    <h2
      id="titulo-paquetes"
      class="text-center text-3xl md:text-5xl font-deco text-gold mb-14"
    >
      Paquetes
    </h2>

    <div class="grid gap-10 sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-4">
      {
        plans.map(({ name, desc, features, highlight }, i) => (
          <div
            class={`relative flex flex-col h-full p-6 rounded-xl bg-gradient-to-br from-[#1a1a1a] to-[#111111] shadow-inner animate-fadein transition-transform hover:scale-[1.015] hover:shadow-gold-glow focus:outline-none focus-visible:ring-2 focus-visible:ring-gold ${
              highlight ? "ring-2 ring-gold" : ""
            }`}
            tabindex={0}
            style={{ animationDelay: `${0.07 + i * 0.07}s` }}
          >
            {highlight && (
              <span class="absolute -top-4 left-1/2 -translate-x-1/2 text-xs font-semibold text-black bg-gold px-3 py-1 rounded-full uppercase tracking-wide shadow">
                Más elegido
              </span>
            )}
            <h3 class="text-xl font-semibold text-gold mb-2 text-center">
              {name}
            </h3>
            <p class="text-sm text-[#ddd] text-center mb-5 leading-relaxed">
              {desc}
            </p>

            <ul class="flex flex-col gap-3 mb-6">
              {features.map((f) => (
                <li class="flex items-start gap-3 text-sm text-[#ddd]">
                  <svg
                    class="w-4 h-4 mt-[2px] text-gold flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M16.707 5.293a1 1 0 010 1.414L8.414 15l-4.121-4.121a1 1 0 011.414-1.414L8.414 12.586l7.293-7.293a1 1 0 011.414 0z" />
                  </svg>
                  <span>{f}</span>
                </li>
              ))}
            </ul>

            <a
              href="#contacto"
              class="mt-auto inline-block text-center bg-[#192e38] hover:bg-gold hover:text-black text-white font-medium py-2.5 px-4 rounded-md transition-all"
              aria-label={`Solicitar presupuesto para ${name}`}
            >
              Solicitar presupuesto
            </a>
          </div>
        ))
      }
    </div>

    <p class="mt-10 text-sm text-center text-[#888] max-w-xl mx-auto">
      * Consultá por combos con branding visual, mantenimiento mensual o
      desarrollos a medida.
    </p>
  </div>
</section>
