---
const samples = [
  { src: "https://placehold.co/600x400?text=Proyecto+1", alt: "Proyecto 1" },
  { src: "https://placehold.co/600x400?text=Proyecto+2", alt: "Proyecto 2" },
  { src: "https://placehold.co/600x400?text=Proyecto+3", alt: "Proyecto 3" },
];
---

<section id="projects">
  <div class="container">
    <h2 style="text-align:center;margin-bottom:2rem;">Proyectos</h2>
    <div
      style="display:grid;gap:1.5rem;grid-template-columns:repeat(auto-fit,minmax(250px,1fr));"
    >
      {
        samples.map((s) => (
          <div
            class="card"
            style="background:var(--color-dark-alt);border-radius:8px;overflow:hidden;transition:transform 0.3s;"
          >
            <img
              src={s.src}
              alt={s.alt}
              style="width:100%;display:block;"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .card:hover {
    transform: translateY(-5px);
  }
</style>
