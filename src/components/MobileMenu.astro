<script type="jsx">
  import { useState } from "react";
  export default function MobileMenu({ nav }) {
    const [open, setOpen] = useState(false);
    return (
      <>
        <button
          aria-label={open ? "Cerrar menú" : "Abrir menú"}
          class="md:hidden ml-2 p-2 rounded focus:outline-none focus:ring-2 focus:ring-gold"
          onClick={() => setOpen((o) => !o)}
        >
          <span class="sr-only">{open ? "Cerrar menú" : "Abrir menú"}</span>
          {open ? (
            // Ícono X
            <svg
              class="w-7 h-7 text-gold"
              fill="none"
              stroke="currentColor"
              strokeWidth={2}
              viewBox="0 0 24 24"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                d="M6 18L18 6M6 6l12 12"
              />
            </svg>
          ) : (
            // Ícono hamburguesa
            <svg
              class="w-7 h-7 text-gold"
              fill="none"
              stroke="currentColor"
              strokeWidth={2}
              viewBox="0 0 24 24"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                d="M4 8h16M4 16h16"
              />
            </svg>
          )}
        </button>
        {/* Menú lateral */}
        <div
          class={`fixed inset-0 z-40 md:hidden transition-transform duration-300 ${open ? "translate-x-0" : "translate-x-full"} pointer-events-${open ? "auto" : "none"}`}
          style={{
            background: "rgba(25,46,56,0.94)",
            backdropFilter: "blur(16px)",
          }}
          aria-hidden={!open}
        >
          <nav class="flex flex-col items-center justify-center h-full gap-8">
            {nav.map(({ label, href }) => (
              <a
                href={href}
                class="text-2xl font-serif-title text-gold hover:underline"
                onClick={() => setOpen(false)}
              >
                {label}
              </a>
            ))}
          </nav>
        </div>
      </>
    );
  }
</script>
