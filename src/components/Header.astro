---
import MobileMenu from "./MobileMenu.jsx";

const nav = [
  { label: "Servicios", href: "#servicios" },
  { label: "Proyectos", href: "#proyectos" },
  { label: "Paquetes", href: "#paquetes" },
  { label: "Promociones", href: "#promociones" },
  { label: "Contacto", href: "#contacto" },
];
---

<header
  class="sticky top-0 z-30 bg-[#0f1113]/80 backdrop-blur-md shadow-md"
  aria-label="Navegación principal"
>
  <div
    class="max-w-7xl mx-auto flex items-center justify-between py-4 px-4 md:py-5 md:px-8"
  >
    <!-- Logo limpio -->
    <a
      href="/"
      aria-label="Ir al inicio de Delfos Studio"
      class="flex items-center"
    >
      <img
        src="/assets/logos/delfos-logo-horizontal-transparente-recortado.png"
        alt="Delfos Studio - Logo horizontal"
        class="w-20 md:w-36 h-auto"
        loading="lazy"
        decoding="async"
      />
    </a>

    <!-- Navegación escritorio -->
    <nav
      class="hidden md:flex items-center gap-8"
      aria-label="Navegación principal"
    >
      {
        nav.map(({ label, href }) => (
          <a
            href={href}
            class="text-sm md:text-base font-medium text-offwhite hover:text-gold transition-colors duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-gold"
          >
            {label}
          </a>
        ))
      }
    </nav>

    <!-- Menú móvil -->
    <div class="md:hidden">
      <MobileMenu nav={nav} client:load />
    </div>
  </div>
</header>
