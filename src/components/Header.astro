---
import MobileMenu from "./MobileMenu.jsx";

const nav = [
  { label: "Servicios", href: "#servicios" },
  { label: "Portfolio", href: "#portfolio" },
  { label: "Paquetes", href: "#paquetes" },
  { label: "Contacto", href: "#contacto" },
];
---

<header
  class="sticky top-0 z-30 bg-[#0f1113]/80 backdrop-blur-md shadow-md"
  aria-label="Navegación principal"
>
  <div
    class="max-w-7xl mx-auto flex items-center justify-between py-5 px-4 md:py-6 md:px-8"
  >
    <!-- Logo + marca -->
    <a
      href="/"
      class="flex items-center"
      aria-label="Inicio - Delfos Studio"
    >
      <img
        src="/assets/logos/delfos-logo-horizontal-transparente-recortado.png"
        alt="Logo Delfos Studio"
        class="w-16 md:w-32"
        loading="lazy"
        decoding="async"
      />
    </a>

    <!-- Navegación escritorio -->
    <nav
      class="hidden md:flex items-center gap-8"
      aria-label="Enlaces principales"
    >
      {
        nav.map(({ label, href }) => (
          <a
            href={href}
            class="text-base md:text-lg font-medium text-offwhite hover:text-gold transition focus:outline-none focus-visible:ring-2 focus-visible:ring-gold"
          >
            {label}
          </a>
        ))
      }
    </nav>

    <!-- Menú móvil -->
    <div class="flex items-center gap-3 md:gap-4">
      <MobileMenu nav={nav} client:load />
    </div>
  </div>
</header>
