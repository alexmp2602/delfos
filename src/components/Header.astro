---
import ThemeToggle from "./ThemeToggle.astro";
import MobileMenu from "./MobileMenu.astro";

const nav = [
  { label: "Servicios", href: "#servicios" },
  { label: "Por qué elegirnos", href: "#beneficios" },
  { label: "Portafolio", href: "#portfolio" },
  { label: "Contacto", href: "#contacto" },
];
---

<header
  class="sticky top-0 z-30 bg-delfos-bg-dark/80 dark:bg-delfos-bg-light/80 backdrop-blur-xl shadow-lg transition-all duration-500"
  aria-label="Navegación principal"
>
  <div class="max-w-7xl mx-auto px-6 py-3 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 group focus:outline-none">
      <img
        src="/assets/logos/delfos-logo-transparente.png"
        alt="Delfos Studio Logo"
        class="w-9 h-9 md:w-11 md:h-11 rounded-full shadow-gold-glow transition-transform duration-300 group-hover:scale-110 motion-safe:hover:rotate-6"
        loading="lazy"
      />
    </a>
    {/* NAV DESKTOP */}
    <nav
      class="hidden md:flex gap-8 font-sans-body text-base font-medium"
      aria-label="Enlaces principales"
    >
      {
        nav.map(({ label, href }) => (
          <a
            href={href}
            class="relative px-2 py-1 text-delfos-bg-light dark:text-delfos-black transition-colors duration-200
                 hover:text-gold focus:text-gold outline-none
                 after:content-[''] after:block after:absolute after:left-0 after:bottom-0 after:w-0 after:h-[2px]
                 after:bg-gold after:transition-all after:duration-300 hover:after:w-full focus:after:w-full"
          >
            {label}
          </a>
        ))
      }
    </nav>
    {/* TOGGLE TEMA + HAMBURGUESA */}
    <div class="flex items-center gap-2 md:gap-4">
      <ThemeToggle />
      <MobileMenu nav={nav} />
    </div>
  </div>
</header>
